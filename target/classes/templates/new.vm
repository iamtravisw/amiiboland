<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Amiibo.Land - The Ultimate Source for Amiibo Collectors!</title>
    <link rel="stylesheet" href="/css/bulma.css">
    <link rel="stylesheet" href="/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/js/amiiboland.js"></script>
    <link rel="icon" href="/amiibo.ico">
    <script src="/js/vanillatoasts.js"></script>
    <link href="/css/vanillatoasts.css" rel="stylesheet"></script>
</head>

<div id="navMenu">
    <script>
        $.get("/navbar", function(data){
            $("#navMenu").replaceWith(data);
        });
    </script>
</div>

    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div id="login">
                <script>
                    $.get("/login", function(data){
                        $("#login").replaceWith(data);
                    });
                </script>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>

    <div class="tabs is-centered is-boxed">
    <ul>
        <li class="is-active">
            <span>
                <a href="new">New</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/">All</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/collected">Collected</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/favorited">Favorited</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/wishlist">Wish List</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/missing">Missing</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/comingsoon">Coming Soon</a>
            </span>
        </li>
    </ul>
</div>

    <div class="columns is-multiline">
        <!-- Here are all of the Amiibo -->
        #foreach( $recents in $newAmiibo )
            <div class="column is-one-fifth">
                <div class="amiibo-id is-hidden" id="amiibo"></div>
                <article class="message is-large is-danger">
                    <div class="message-header" id="$recents.Name">
                        <p></p>
                        <p>$recents.Name</p>
                        <p></p>
                    </div>
                    <center>   <!-- Amiibo -->
                        <figure class="image has-text-light">
                            <img class="amiibo-image" src="$recents.ImageURL" id="inactive-$recents.AmiiboID">
                            <!-- Content Over Amiibo -->
                            <figcaption class="overlay is-overlay is-invisible" id="active-$recents.AmiiboID">
                                <!-- Background -->
                                <img class="background is-overlay" src="https://storage.googleapis.com/amiibo/black.png">
                                <div style="height:16px;font-size:16px;">&nbsp;</div>
                                <!-- Buttons -->
                                <div class="tile is-ancestor">
                                    <!-- Collected "Mine" (Star) Button -->
                                    <div class="tile is-parent">
                                        <article class="tile is-child">
                                            #if ($recents.Collected == "Y")
                                            <div class="star has-text-warning" id="star$recents.AmiiboID">
                                            #else
                                            <div class="star" id="star$recents.AmiiboID">
                                            #end
                                            <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-star fa-2x"></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Mine</h4>
                                                        <input class="mine is-hidden" type="checkbox" id="mine#$recents.AmiiboID#$recents.Name" value="$recents.Collected">
                                                    </span>
                                            </label>
                                        </div>
                                        </article>
                                    </div>
                                    <!-- Collected "Love" (Heart) Button -->
                                    <div class="tile is-parent">
                                        <article class="tile is-child">
                                            #if ($recents.Favorited == "Y")
                                            <div class="heart has-text-danger" id="heart$recents.AmiiboID">
                                            #else
                                            <div class="heart" id="heart$recents.AmiiboID">
                                            #end
                                            <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-heart fa-2x "></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Love</h4>
                                                            <input class="love is-hidden" type="checkbox" id="love#$recents.AmiiboID#$recents.Name" value="$recents.Favorited">
                                                    </span>
                                            </label>
                                        </div>
                                        </article>
                                    </div>
                                    <!-- Collected "Want" (Gem) Button -->
                                    <div class="tile is-parent">
                                        <article class="tile is-child">
                                            #if($recents.WishList == "Y")
                                            <div class="gem has-text-info" id="gem$recents.AmiiboID">
                                            #else
                                            <div class="gem" id="gem$recents.AmiiboID">
                                            #end
                                            <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-gem fa-2x"></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Want</h4>
                                                            <input class="want is-hidden" type="checkbox" id="want#$recents.AmiiboID#$recents.Name" value="$recents.WishList">
                                                    </span>
                                            </label>
                                        </div>
                                        </article>
                                    </div>
                            </figcaption>
                        </figure>
                    </center>
                </article>
            </div>
        #end
    </div>

