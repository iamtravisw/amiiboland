    <script>
        $.get("/navbar", function(data){
            $("#navMenu").replaceWith(data);
        });
    </script>
</div>


<div class="tabs is-centered is-boxed">
    <ul>
        <li class="">
            <span>
                <a href="new">New</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/">All</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/collected">Collected</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/favorited">Favorited</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/wishlist">Wish List</a>
            </span>
        </li>

        <li class="is-active">
            <span>
                <a href="#">Missing</a>
            </span>
        </li>

        <li class="">
            <span>
                <a href="/comingsoon">Coming Soon</a>
            </span>
        </li>
    </ul>
</div>

<div class="columns is-multiline">
    <!-- Here are all of the Amiibo -->
    #foreach( $missing in $missingAmiibo)
        <div class="column is-one-fifth">
            <div class="amiibo-id" amiibo="$missing.AmiiboID"></div>
            <article class="message is-large is-danger">
                <div class="message-header">
                    <p></p>
                    <p>$missing.Name</p>
                    <p></p>
                </div>
                <center>   <!-- Amiibo -->
                    <figure class="image has-text-light">
                        <img class="amiibo-image" src="$missing.ImageURL" id="inactive">
                        <!-- Content Over Amiibo -->
                        <figcaption class="overlay is-overlay is-invisible" id="active">
                            <!-- Background -->
                            <img class="background is-overlay" alt="Mario" src="https://storage.googleapis.com/amiibo/black.png">
                            <div style="height:16px;font-size:16px;">&nbsp;</div>

                            <!-- Buttons -->
                            <div class="tile is-ancestor">

                                <!-- Collected "Mine" (Star) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        <div class="star">
                                            <label>
                                                <span class="fa-stack">
                                                    <i class="fas fa-star fa-2x"></i>
                                                    <h4 class="subtitle is-5 has-text-light is-bold">Mine</h4>
                                                    <input class="mine is-hidden" type="checkbox" value="1" id="mine">
                                                </span>
                                            </label>
                                        </div>
                                    </article>
                                </div>
                                <!-- Collected "Love" (Heart) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        <div class="heart">
                                            <label>
                                                <span class="fa-stack">
                                                    <i class="fas fa-heart fa-2x"></i>
                                                    <h4 class="subtitle is-5 has-text-light is-bold">Love</h4>
                                                    <input class="love is-hidden" type="checkbox" id="love">
                                                </span>
                                            </label>
                                        </div>
                                    </article>
                                </div>
                                <!-- Collected "Want" (Gem) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        <div class="gem">
                                            <label>
                                                <span class="fa-stack">
                                                    <i class="fas fa-gem fa-2x"></i>
                                                    <h4 class="subtitle is-5 has-text-light is-bold">Want</h4>
                                                    <input class="want is-hidden" type="checkbox" id="want">
                                                </span>
                                            </label>
                                        </div>
                                    </article>
                                </div>

                        </figcaption>
                    </figure>
                </center>
            </article>
        </div>
    #end
</div>

