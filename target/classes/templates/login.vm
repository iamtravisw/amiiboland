
<div id="login">
    <form action="/loginuser" method="POST">
<div class="container is-fluid">
    <div class="notification">

        <h1 class="title">Login to Amiibo.Land</h1>

        <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-danger" type="email" input name="email" id="email" placeholder="Email input">
                <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
                <span class="icon is-small is-right">
      <i class="fas fa-exclamation-triangle"></i>
    </span>
            </div>
            <p class="help is-danger">This email is invalid</p>
        </div>


        <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left has-icons-right">
                <input class="input is-danger" type="password" input name="password" id="password" placeholder="Password">
                <span class="icon is-small is-left">
  <i class="fas fa-envelope"></i>
                </span> </div>

                <br>
                <div class="field">
                    <div class="control">
                           Forgot Password? <a href="#">Click here</a>.
                        </label>
                    </div>
                </div>

            <div class="field">
                <div class="control">
                    Or <a href="/signup">Sign up</a> here.
                    </label>
                </div>
            </div>

                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link input type="submit"">Submit</button>
                    </div>
                    <div class="control">
                        <button class="button is-text" id="modal-close">Cancel</button>
                    </div>
                </div>
        </div>
    </div>
</div>
    </form>
</div>