<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Amiibo.Land - The Ultimate Source for Amiibo Collectors!</title>
    <link rel="stylesheet" href="/css/bulma.css">
    <link rel="stylesheet" href="/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/js/amiiboland.js"></script>
    <link rel="icon" href="/amiibo.ico">
    <script src="/js/vanillatoasts.js"></script>
    <link href="/css/vanillatoasts.css" rel="stylesheet"></script>
    <script type="text/javascript">
        var authenticated = $authenticated;
    </script>
</head>

    <div id="navMenu">
            <script>
            $.get("/navbar", function(data){
                $("#navMenu").replaceWith(data);
            });
    </script>
    </div>
<body>

<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div id="login">
            <script>
                $.get("/login", function(data){
                    $("#login").replaceWith(data);
                });
            </script>
        </div>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
</div>


<section class="hero is-danger">
    <div class="hero-body">
        <div class="container">

            <div class="columns is-half">
                <div class="column">
                    <h1 class="title">
                        TravisaurusREKT's profile
                    </h1>
                    <h2 class="subtitle">
                        Welcome to the Collection of TravisaurusREKT
                    </h2>
                </div>
                <div class="column has-text-right">
                    <div style="height:12px;font-size:12px;">&nbsp;</div>
                    <h2 class="subtitle">
                        <strong>Collected</strong><br>
                        <div id="amiiboCount">
                            <script>
                                $.get("/count", function(data){
                                    $("#amiiboCount").replaceWith(data);
                                });
                            </script>
                        </div>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="column is-gapless">
    <div class="container is-fluid">

        <div class="tabs is-left">
            <ul>
                <li class="is-active">
                    <a href="/profile/collection">
                        <span class="icon is-small"><i class="fas fa-star" aria-hidden="true"></i></span>
                        <span>Collection</span>
                    </a>
                </li>
                <li>
                    <a href="/profile/favorites">
                        <span class="icon is-small"><i class="fas fa-heart" aria-hidden="true"></i></span>
                        <span>Favorites</span>
                    </a>
                </li>
                <li>
                    <a href="/profile/wishlist">
                        <span class="icon is-small"><i class="fas fa-gem" aria-hidden="true"></i></span>
                        <span>Wish List</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="columns is-multiline">
    <!-- Here are all of the Amiibo -->
    #foreach( $collected in $collectedAmiibo )
        <div class="column is-one-fifth">
            <div class="amiibo-id is-hidden" id="amiibo"></div>
            <article class="message is-large is-danger">
                <div class="message-header" id="$collected.Name">
                    <p></p>
                    <p>$collected.Name</p>
                    <p></p>
                </div>
                <center>   <!-- Amiibo -->
                    <figure class="image has-text-light">
                        <img class="amiibo-image" src="$collected.ImageURL" id="inactive-$collected.AmiiboID">
                        <!-- Content Over Amiibo -->
                        <figcaption class="overlay is-overlay is-invisible" id="active-$collected.AmiiboID">
                            <!-- Background -->
                            <img class="background is-overlay" src="https://storage.googleapis.com/amiibo/black.png">
                            <div style="height:16px;font-size:16px;">&nbsp;</div>
                            <!-- Buttons -->
                            <div class="tile is-ancestor">
                                <!-- Collected "Mine" (Star) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        #if ($collected.Collected == "Y")
                                        <div class="star has-text-warning" id="star$collected.AmiiboID">
                                        #else
                                        <div class="star" id="star$collected.AmiiboID">
                                        #end
                                        <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-star fa-2x"></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Mine</h4>
                                                        <input class="mine is-hidden" type="checkbox" id="mine#$collected.AmiiboID#$collected.Name" value="$collected.Collected">
                                                    </span>
                                        </label>
                                    </div>
                                    </article>
                                </div>
                                <!-- Collected "Love" (Heart) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        #if ($collected.Favorited == "Y")
                                        <div class="heart has-text-danger" id="heart$collected.AmiiboID">
                                        #else
                                        <div class="heart" id="heart$collected.AmiiboID">
                                        #end
                                        <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-heart fa-2x "></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Love</h4>
                                                            <input class="love is-hidden" type="checkbox" id="love#$collected.AmiiboID#$collected.Name" value="$collected.Favorited">
                                                    </span>
                                        </label>
                                    </div>
                                    </article>
                                </div>
                                <!-- Collected "Want" (Gem) Button -->
                                <div class="tile is-parent">
                                    <article class="tile is-child">
                                        #if($collected.WishList == "Y")
                                        <div class="gem has-text-info" id="gem$collected.AmiiboID">
                                        #else
                                        <div class="gem" id="gem$collected.AmiiboID">
                                        #end
                                        <label>
                                                    <span class="fa-stack">
                                                        <i class="fas fa-gem fa-2x"></i>
                                                        <h4 class="subtitle is-5 has-text-light is-bold">Want</h4>
                                                            <input class="want is-hidden" type="checkbox" id="want#$collected.AmiiboID#$collected.Name" value="$collected.WishList">
                                                    </span>
                                        </label>
                                    </div>
                                    </article>
                                </div>
                        </figcaption>
                    </figure>
                </center>
            </article>
        </div>
    #end
</div>

